{
  "model_name": "meta-llama/Llama-3.2-3B-Instruct",
  "model_path": "./barcode_model",
  "data_path": "barcode_product_dataset.csv",
  "output_dir": "./outputs",
  "training": {
    "epochs": 3,
    "learning_rate": 5e-5,
    "batch_size": 4,
    "warmup_steps": 100,
    "weight_decay": 0.01,
    "max_length": 512
  },
  "evaluation": {
    "test_size": 0.2,
    "metrics": ["bleu", "rouge1", "rouge2", "rougeL"],
    "output_file": "evaluation_report.json",
    "plot_dir": "./evaluation_plots"
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "model_path": "./barcode_model"
  },
  "deployment": {
    "docker_image": "barcode-api",
    "container_name": "barcode-api",
    "expose_port": 8000
  }
}
